<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".RobotPurchase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/robotLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/king_of_detroit_robot_white_large" />

        <TextView
            android:id="@+id/robotEnergyToSpend"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/energyCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/energy_counter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonRewardA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward \n A" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/costOfRewardAEnergy"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/rewardAEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/energy_counter" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonRewardB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward \n B" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/costOfRewardBEnergy"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="24sp"/>

                <ImageView
                    android:id="@+id/rewardBEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/energy_counter" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonRewardC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward \n C" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/costOfRewardCEnergy"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="24sp"/>

                <ImageView
                    android:id="@+id/rewardCEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/energy_counter" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>